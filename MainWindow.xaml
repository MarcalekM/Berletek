<Window x:Class="Bérletek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bérletek"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Label Content="Megálló sorszáma:" HorizontalAlignment="Left" Margin="55,40,0,0" VerticalAlignment="Top" Width="110"/>
        <Label Content="Felszállás dátuma:" HorizontalAlignment="Left" Margin="55,80,0,0" VerticalAlignment="Top" Width="110"/>
        <Label Content="Felszállás időpontja [óó:pp]:" HorizontalAlignment="Left" Margin="55,120,0,0" VerticalAlignment="Top" Width="110"/>
        <Label Content="Kártya azonosítoja:" HorizontalAlignment="Left" Margin="55,160,0,0" VerticalAlignment="Top" Width="110"/>
        <ComboBox x:Name="Megallo" HorizontalAlignment="Left" Margin="200,40,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Megallo_SelectionChanged"/>
        <DatePicker x:Name="Datum" HorizontalAlignment="Left" Margin="200,80,0,0" VerticalAlignment="Top"/>
        <Button x:Name="UtasAdat" Content="Adatok" HorizontalAlignment="Left" Margin="320,382,0,0" VerticalAlignment="Top" Click="UtasAdat_Click"/>


    </Grid>
</Window>
